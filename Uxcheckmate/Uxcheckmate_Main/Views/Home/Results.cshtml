@model Tuple<IEnumerable<Uxcheckmate_Main.Models.DesignIssue>, IEnumerable<Uxcheckmate_Main.Models.Pa11yIssue>>

<h1 class="text-center">UXCheckmate Analysis Reports</h1>

@if (Model == null || (!Model.Item1.Any() && !Model.Item2.Any()))
{
    <div class="alert alert-success"><strong>Congrats! No issues detected. Your site is in great shape!</strong></div>
}
else
{
    <h3>Design Issues</h3>
    <p>Total Issues: @Model.Item1.Count()</p>

    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>Category</th>
                <th>Issue</th>
                <th>Severity</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var issue in Model.Item1 ?? Enumerable.Empty<Uxcheckmate_Main.Models.DesignIssue>())
        {
            <tr>
                <td>@(issue.Category != null ? issue.Category.Name : "Uncategorized")</td>
                <td>@issue.Message</td>
                <td>
                    @if (issue.Severity == 3)
                    {
                        <span class="badge bg-danger">High</span>
                    }
                    else if (issue.Severity == 2)
                    {
                        <span class="badge bg-warning">Medium</span>
                    }
                    else
                    {
                        <span class="badge bg-info">Low</span>
                    }
                </td>
            </tr>
        }
        </tbody>
    </table>

    <h3>Accessibility Issues</h3>
    <p>Total Issues: @Model.Item2.Count()</p>

    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>Code</th>
                <th>Message</th>
                <th>Selector</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var issue in Model.Item2 ?? Enumerable.Empty<Uxcheckmate_Main.Models.Pa11yIssue>())
        {
            <tr>
                <td>@issue.Code</td>
                <td>@issue.Message</td>
                <td>@issue.Selector</td>
            </tr>
        }
        </tbody>
    </table>
}

@section Scripts {
    <script src="~/js/reportResults.js"></script>
}