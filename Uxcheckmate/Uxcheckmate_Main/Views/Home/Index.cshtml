@model Uxcheckmate_Main.Models.ReportUrl

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Let's analyze your site!</h1>

    <form method="post" asp-action="Report" id="urlForm">
        <div class="form-group">
            <label for="url">Enter the URL of the site you want to analyze:</label>
            <input type="text" class="form-control" id="urlInput" name="Url" asp-for="Url" placeholder="Enter URL (e.g., uxcheckmate.com)">
            <span asp-validation-for="Url" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
    <div id="confirmationMessage" class="mt-3"></div>
</div>

<script src="~/js/handleUserUrl.js"></script>
