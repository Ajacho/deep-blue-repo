@model Uxcheckmate_Main.Models.ReportUrl

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Let's analyze your site!</h1>

    <form method="post" id="urlForm">
        <div class="form-group">
            <label for="urlInput">Enter the URL of the site you want to analyze:</label>
            <input type="text" class="form-control" id="urlInput" placeholder="Enter URL (e.g., https://uxcheckmate.com)">
        </div>
        <button type="submit" id="urlSubmitBtn" class="btn btn-primary mt-2">Submit</button>
    </form>

    <div id="confirmationMessage" class="mt-3"></div>
    <div id="resultsContainer" class="mt-4"></div>
</div>

<script src="~/js/handleUserUrl.js"></script>
